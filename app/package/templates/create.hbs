<div class="container-fluid bottom-buffer top-buffer">
    <div class="row">
        <div class="col-md-12">
            <h1>Create A New Slide</h1>
        </div>
    </div>
</div>
<div class="container-fluid form-horizontal">
    <div class="form-group">
        <label for="prompt" class="col-md-1 control-label">Prompt</label>
        <div class="col-md-5">
            {{#input value=model.prompt class="form-control" name="prompt" placeholder="enter slide prompt/title"}}{{/input}}
        </div>
        <div class="col-md-6 markdowm">
            <h1>{{model.prompt}}</h1>
        </div>
    </div>
    <div class="form-group">
        <label for="text" class="col-md-1 control-label">Text</label>
        <div class="col-md-5">
            {{#textarea value=model.text class="form-control" name="text" placeholder="enter slide text/answer"}}{{/textarea}}
        </div>
        <div class="col-md-6 markdown">
            {{markdown model.text}}
        </div>
    </div>
    <div class="form-group">
        <label for="category" class="col-md-1 control-label">Category</label>
        <div class="col-md-5">
            {{#input value=model.category class="form-control" name="category" placeholder="enter slide topic/category"}}{{/input}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action "save"}}>Save</button>
        </div>
    </div>
</div>